# Dominio sslip apuntando al IP publico del servidor
# Ejemplo: sigea.203.0.113.10.sslip.io
SIGEA_DOMAIN="sigea.127.0.0.1.sslip.io"
ACME_EMAIL="admin@example.com"

# Para no tocar otras instancias, usa nombre de proyecto unico
PROJECT_NAME="sigea-v1"
SIGEA_APP_PORT="3100"

# Cambia estos puertos si 80/443 ya estan ocupados en el host
# (solo aplica si levantas el servicio caddy del compose con profile edge-caddy)
SIGEA_HTTP_PORT="80"
SIGEA_HTTPS_PORT="443"

POSTGRES_DB="sigea"
POSTGRES_USER="sigea"
POSTGRES_PASSWORD="change-me-db"
AUTH_SECRET="change-me-very-strong-secret"

LITIGACION_CAN_SET_READY="true"
LITIGACION_CAN_ADD_EVIDENCE="true"
LITIGACION_CAN_DELETE_EVIDENCE="false"
